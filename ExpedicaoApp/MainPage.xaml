<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpedicaoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="25">
            
            <Button
                x:Name="BtnEnderecamento"
                Text="Endereçamento Volume Shopping" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" 
                Clicked="OnButtonClicked"/>


            <Button
                x:Name="BtnRomaneio"
                Text="Romaneio Caminhão" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />

            <Button
                x:Name="BtnVolumeShopping"
                Text="Carga Shopping" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
